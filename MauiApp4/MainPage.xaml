<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.MainPage">

    <ScrollView>
        <Grid
            Padding="30,0"
            RowDefinitions="*, 48">
            
            <BoxView HeightRequest="500" WidthRequest="300"
                     x:Name="progress"/>
            
            <Border 
                x:Name="imgBorder"
                StrokeShape="{RoundRectangle}">
            <Image
                x:Name="albumArt"
                Source="dotnet_bot.png"
                Aspect="AspectFit"/>
            </Border>
            
            
            <Button Text="Animate" Clicked="Button_OnClicked" Grid.Row="1"/>
        </Grid>
    </ScrollView>

</ContentPage>
